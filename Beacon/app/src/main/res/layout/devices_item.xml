<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bluetoothicon"
        android:layout_width="37dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/bluetoothname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/bluetoothicon"
        android:text="name"
        android:textColor="#000000"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/NamespaceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetoothname"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/bluetoothicon"
        android:text="NamespaceID"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/instanceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NamespaceID"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/bluetoothicon"
        android:text="instanceId"
        android:textSize="15dp" />

</RelativeLayout>